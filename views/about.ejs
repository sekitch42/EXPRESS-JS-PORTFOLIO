  <!-- bootstrap grid system to split card into two columns -->
    <div class="row g-0">

      <!-- left column: profile photo -->
      <div class="col-md-4">
        <img src="/Assets/images/profilephoto.png" class="img-fluid rounded-start" alt="Photo of me">
