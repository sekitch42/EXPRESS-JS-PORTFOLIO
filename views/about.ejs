      <!-- right column: text -->
      <div class="col-md-8">
        <div class="card-body text-success">
          <h3 class="card-title">About Me</h3>
          <p class="card-text">Hi, My name is Sarah Kitchen and I'm a networking and IT security student at Ontario Tech University.</p>
        </div>
      </div>
    </div>
